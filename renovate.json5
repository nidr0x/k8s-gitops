{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/Madrid)",
    "helpers:pinGitHubActionDigests",
    "github>nidr0x/k8s-gitops//.renovate/labels.json5",
    "github>nidr0x/k8s-gitops//.renovate/customManagers.json5",
    "github>nidr0x/k8s-gitops//.renovate/automerge.json5",
    "github>nidr0x/k8s-gitops//.renovate/commitMessage.json5",
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  argocd: {
    managerFilePatterns: ["/^.*\\.ya?ml$/"],
  },
  kubernetes: {
    managerFilePatterns: ["/^.*\\.ya?ml$/"],
  },
  ignorePaths: ["**/*.sops.*"],
  commitMessageTopic: "{{depName}}",
  commitMessageExtra: "to {{newVersion}}",
  commitMessageSuffix: "",
  packageRules: [
    {
      matchDatasources: ["helm"],
      commitMessageTopic: "chart {{depName}}",
      groupName: "helm",
    },
    {
      matchDatasources: ["docker"],
      commitMessageTopic: "image {{depName}}",
      groupName: "docker",
    },
    {
      matchManagers: ["github-actions"],
      groupName: "github-actions",
    },
  ],
  rangeStrategy: "auto",
  prHourlyLimit: 2,
  prConcurrentLimit: 20,
  separateMajorMinor: true,
  separateMultipleMajor: true,
}
