{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/Madrid)",
    "helpers:pinGitHubActionDigests",
    "github>nidr0x/k8s-gitops//.renovate/labels.json5",
    "github>nidr0x/k8s-gitops//.renovate/customManagers.json5",
    "github>nidr0x/k8s-gitops//.renovate/automerge.json5",
    "github>nidr0x/k8s-gitops//.renovate/commitMessage.json5",
    "github>nidr0x/k8s-gitops//.renovate/groups.json5",
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  branchTopic: "{{depName}}-{{newVersion}}",
  assignees: ["nidr0x"],
  reviewers: ["nidr0x"],
  argocd: {
    managerFilePatterns: ["/^.*\\.ya?ml$/"],
  },
  kubernetes: {
    managerFilePatterns: ["/^.*\\.ya?ml$/"],
  },
  ignorePaths: ["**/*.sops.*"],
  commitMessageTopic: "{{depName}}",
  commitMessageExtra: "to {{newVersion}}",
  commitMessageSuffix: "",
  packageRules: [
    {
      description: "Wait 3 days for minor/patch updates to ensure stability",
      matchUpdateTypes: ["minor", "patch"],
      minimumReleaseAge: "3 days",
    },
    {
      matchPackageNames: ["homebridge/homebridge"],
      versioning: "regex:^(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})$",
    },
    {
      description: "Process Talos and Kubelet updates immediately",
      matchPackageNames: ["/siderolabs/.*/"],
      minimumReleaseAge: "0 days",
    },
  ],
  rangeStrategy: "auto",
  prHourlyLimit: 2,
  prConcurrentLimit: 20,
  separateMajorMinor: true,
  separateMultipleMajor: true,
}
