{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "username": "rosey-bot[bot]",
  "repositories": ["nidr0x/homelab"],
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    "helpers:pinGitHubActionDigests",
    "github>nidr0x/homelab//.github/renovate/commitMessage.json"
  ],
  "platform": "github",
  "onboarding": false,
  "requireConfig": "optional",
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "argocd": {
    "fileMatch": ["\\.yaml$", "\\.yml$"]
  },
  "kubernetes": {
    "fileMatch": ["\\.yaml$", "\\.yml$"]
  },
  "regexManagers": [
    {
      "matchStrings": [
        "source:\\n.*chart: (?<depName>.*)\\n.*repoURL: (?<registryUrl>.*)\\n.*targetRevision: (?<currentValue>.*)"
      ],
      "fileMatch": ["\\.yaml$", "\\.yml$"],
      "datasourceTemplate": "helm"
    }
  ]
}

