{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "username": "rosey-bot[bot]",
  "repositories": ["nidr0x/homelab"],
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    "helpers:pinGitHubActionDigests",
    "github>nidr0x/homelab//.github/renovate/labels.json5"
  ],
  "platform": "github",
  "onboarding": false,
  "requireConfig": "optional",
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "argocd": {
    "fileMatch": ["^.*\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["^.*\\.ya?ml$"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process Helm charts updates",
      "matchStrings": [
        "source:\\s*\\n",
        ".*chart: (?<depName>.*)\\n",
        ".*repoURL: (?<registryUrl>.*)\\n",
        ".*targetRevision: (?<currentValue>.*)"
      ],
      "fileMatch": ["^.*\\.ya?ml$"],
      "datasourceTemplate": "helm"
    },
    {
      "customType": "regex",
      "description": "Process Talos and K8S upgrades",
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( repository=(?<registryUrl>\\S+))?\\n.+(:\\s|=)(&\\S+\\s)?(?<currentValue>\\S+)",
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n.+/(?<currentValue>(v|\\d)[^/]+)"
      ],
      "fileMatch": ["(^|/)bootstrap/.+\\.ya?ml$"]
    }
  ],
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "commitMessageSuffix": "",
  "packageRules": [
    { "matchDatasources": ["helm"], "commitMessageTopic": "chart {{depName}}" },
    {
      "matchDatasources": ["docker"],
      "commitMessageTopic": "image {{depName}}"
    }
  ],
  "rangeStrategy": "auto",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 20,
  "separateMajorMinor": true,
  "separateMultipleMajor": true
}
